@model SOEEApp.Models.ServiceTypeSlabMap

<h2>Map ServiceType → Slab → Percentage</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.ServiceTypeID)
        @Html.DropDownList("ServiceTypeID", null, "Select Service Type", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SlabID)
        @Html.DropDownList("SlabID", new SelectList(ViewBag.SlabID, "SlabID", "Text"), "Select Slab", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Percentage)
        @Html.TextBoxFor(m => m.Percentage, new { @class = "form-control" })
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
}
