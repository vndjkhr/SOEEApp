@model IEnumerable<SOEEApp.Models.SOEE>


@{
    ViewBag.Title = "SOEE List";
}

<h2>SOEE List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>SOEE ID</th>
            <th>Project</th>
            <th>Customer</th>
            <th>SOEE Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.SOEEID</td>
                <td>@i.Project.Name</td>
                <td>@i.Customer.CustomerName</td>
                <td>@i.SOEERaiseDate.ToShortDateString()</td>
                <td>@i.GrandTotal.ToString("0.00")</td>
                <td>@i.Status</td>
                <td>
                    @Html.ActionLink("View", "Details", new { id = i.SOEEID })
                    @Html.ActionLink("Edit", "Edit", new { id = i.SOEEID }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
